<% title "Log In" %>

<p>Don't have an account? <%= link_to "Sign Up!", signup_path %></p>

<%= form_tag sessions_path, :class => "form-horizontal" do %>
  <fieldset>  

    <legend>Log In To IPL</legend>

    <div class="control-group">
      <%= label_tag :login, "Email Address", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag :login, params[:login] %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password, "Password", :class => "control-label" %>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "Log In", :class => "btn btn-large btn-info" %>
    </div>

  </fieldset>
<% end %>
